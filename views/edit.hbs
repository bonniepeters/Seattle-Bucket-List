<h2>Edit:</h2>
<form action="/{{activity.id}}?_method=put" method="post">
  <p>
    <label>Name:</label>
    <input type="text" value="{{activity.name}}" name="name" required>
    <label>Type:</label>
    <select name="type" required>
        <option value="{{activity.type}}" hidden="hidden" selected="selected">{{activity.type}}</option>
        <option value="Sightseeing">Sightseeing</option>
        <option value="Arts & Culture">Arts & Culture</option>
        <option value="Outdoor Recreation">Outdoor Recreation</option>
        <option value="Food & Drink">Food & Drink</option>
        <option value="Day Trips">Day Trips</option>
    </select>
    <label>Address:</label>
    <input type="text" value="{{activity.address}}" name="address" required>
    <label>Cost:</label>
    <input type="number" name="cost" min="0" value="{{activity.cost}}" required>
    <label>Hours:</label>
    <input type="text" value="{{activity.hours}}" name="hours" required>
    <label>Time:</label>
    <input type="number" min="15" step="15" value="{{activity.duration}}" name="duration" placeholder="in minutes" required>
    <label>Website:</label>
    <input type="url" value="{{activity.url}}" name="url" required>
    <label>Image Link:</label>
    <input type="url" value="{{activity.imgUrl}}" name="imgUrl" required>
    <label>Added By:</label>
    <select name="user" required>
      <option value="{{activity.user}}" hidden="hidden" selected="selected">{{activity.user}}</option>
      <option value="Bonnie">Bonnie</option>
      <option value="Lucas">Lucas</option>
      <option value="Guest">Guest</option>
    </select>
    <label>Been There Done That:</label>
    <select name="done" required>
      <option value="{{activity.done}}" hidden="hidden" selected="selected">{{activity.done}}</option>
      <option value="true">true</option>
      <option value="false">false</option>
    </select>
  </p>
  <input type="submit" value="Save" />
</form>

<form action="/{{activity.id}}?_method=delete" method="post">
    <input type="submit" value="Delete">
</form>

<a href="/{{activity.id}}"><button>Cancel</button></a>