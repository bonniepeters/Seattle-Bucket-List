<h2>Edit:</h2>

<form action="/{{activity.id}}?_method=put" method="post">
  <p>
    <label>Name:</label>
    <input type="text" value="{{activity.name}}" name="name">
    <label>Type:</label>
    <input type="text" value="{{activity.type}}" name="type">
    <label>Address:</label>
    <input type="text" value="{{activity.address}}" name="address">
    <label>Cost:</label>
    <input type="text" value="{{activity.cost}}" name="cost">
    <label>Hours:</label>
    <input type="text" value="{{activity.hours}}" name="hours">
    <label>Time:</label>
    <input type="text" value="{{activity.duration}}" name="duration">
    <label>Website:</label>
    <input type="url" value="{{activity.url}}" name="url">
    <label>User:</label>
    <input type="text" value="{{activity.user}}" name="user">
    <label>Done:</label>
    <input type="text" value="{{activity.done}}" name="done">
  </p>
  <input type="submit" value="Save" />
</form>

<form action="/{{activity.id}}?_method=delete" method="post">
    <input type="submit" value="Delete">
</form>

<button><a href="/{{activity.id}}">Cancel</a></button>